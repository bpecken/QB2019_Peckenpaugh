beta.w <- function(site.by.species = ""){
SbyS.pa <- decostand(site.by.species, method = "pa")
S <- ncol(SbyS.pa[,which(colSums(SbyS.pa) > 0)])
a.bar <- mean(specnumber(SbyS.pa))
b.w <- round(S/a.bar, 3)
return(b.w)
}
